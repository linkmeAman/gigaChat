# Application
PROJECT_NAME=GigaChat
VERSION=1.3.0-free

# Security
AUTH_PASSWORD_PEPPER=your_secure_pepper_here
PASETO_SECRET=your_paseto_secret_here

# Database
DATABASE_URL=mysql://user:password@localhost/gigachat
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=50

# Redis
REDIS_URL=redis://localhost:6379/0

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=your_access_key
MINIO_SECRET_KEY=your_secret_key
MINIO_BUCKET=gigachat

# AI Model
DEFAULT_MODEL=mistral-7b-instruct
MODEL_SERVER=vllm  # or tgi or llama.cpp
DEVICE=cuda  # or cpu

# Vector Store
VECTOR_STORE=faiss  # or qdrant
EMBEDDING_MODEL=bge-small-en-v1.5

# Search
SEARXNG_URL=http://localhost:8888

# Observability
LOG_LEVEL=INFO
TRACE_SAMPLE_RATE=0.2

# Optional: HIBP API key for password breach checking
HIBP_API_KEY=your_hibp_api_key  # Optional

# External Auth (Optional)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret